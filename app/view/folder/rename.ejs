<body>
<%- include('../include/menu.ejs',{system:system}) %>
<%- include('../include/folderNav.ejs',{system:system,project:project,folder:folder}) %>
<div class="bg-secondary" id = "header"  style="padding:35px 50px;border: 1px solid #343a40;">
	<h4 class="bg-secondary" ><i class="fa fa-folder fa-lg" ></i>  Rename Folder</h4>
</div>
<br>
<div class="content">
	<div class="body" style="padding:40px 50px;">
		<div class="center-div form-width">
			<form id="fileForm" role="form" method="post">
				<input type="hidden" name="dir" id="dir" value="<%= folder.dir%>">
				<label for="name" class="align-left"><i class="fa fa-folder"></i><b>Current Name:</b> <%= folder.name%></label>
				<br>
				<label for="name" class="align-left"><span class="glyphicon glyphicon-folder-open"></span><i class="fa fa-folder"></i><b> New Name</b></label>
				<input type="text" class="form-control" name="name" id="name" placeholder="Folder Name">
				<br>
				<button type="submit" class="btn btn-dark btn-block" > Rename</button>
			</form>
		</div>
	</div>
</div>
