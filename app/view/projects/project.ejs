<%- include('../include/head.ejs',{title:'File System Home',scripts:false})%>
<body>
<%- include('../include/menu.ejs',{system:system}) %>

<% var user = system.getUserInfo()%>
<%- include('../include/projectNav.ejs',{system:system,project:project})%>
<div class="bg-secondary" id = "header"  style="padding:35px 50px;">
    <h4 class="bg-secondary" ><i class="fa fa-archive fa-lg" ></i>  Project <%= project.name%></h4>
</div>
<br>
<% var entitys = project.getEntitys()%>
<% var totalCells = entitys.length%>
<% var fullRows = Math.floor(entitys.length/3)%>
<% var partialRowCount = entitys.length % 3 %>
<% var rows = fullRows+1%>
<% var cellCount1 = 0%>
<% var cellCount2 = 0%>
<% var cellCount3 = 0%>
<div class="container">

            <%for(var i = 0; i < rows; i++){%>
                <%var cellsInRow = 3%>
                <%if(i === fullRows){
                    cellsInRow = partialRowCount;
                }%>

                        <div style="text-align:center;" class="row">
                            <%for(var k = 0; k < cellsInRow; k++){%>
                                <div class="col">
                                    <div class="dropdown">
                                        <button style = "background-color:transparent; font-size:12px" class="btn btn-lg dropdown-toggle" type="button" id="projSettings" data-toggle="dropdown" aria-haspopup ="true" aria-expanded="false">
                                        <i class="fa fa-cog"></i> Options
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="projSettings">
                                            <%  var deletePath;
                                                var renamePath;
                                                var permissionsPath;
                                            %>
                                            <%if(entitys[cellCount1].isFolder && entitys[cellCount1].read){
                                                deletePath = "./"+project.id+"/folders/delete?id="+entitys[cellCount1].getId();
                                                renamePath = "./"+project.id+"/folders/folder/"+entitys[cellCount1].getId()+"/rename";
                                                permissionsPath = "./"+project.id+"/folders/folder/"+entitys[cellCount1].getId()+"/permissions";
                                            %>
                                                <form action = ./<%= project.id%>/folders/folder/<%= entitys[cellCount1].getId()%> method="get">
                                                    <button class="dropdown-item" type="submit"><i class="fa fa-folder-open"></i> Open</button>
                                                </form>
                                            <%}else if(!entitys[cellCount1].isFolder && entitys[cellCount1].read){
                                                deletePath = "./"+project.id+"/files/"+entitys[cellCount1].id+"/delete";
                                                renamePath = "./"+project.id+"/files/"+entitys[cellCount1].getId()+"/rename";
                                                permissionsPath = "./"+project.id+"/files/"+entitys[cellCount1].getId()+"/permissions";
                                            %>
                                                <form action = "./<%= project.id%>/files/inline/<%= entitys[cellCount1].id%>" method="get">
                                                    <button class="dropdown-item" type="submit"><i class="fa fa-eye"></i> View</button>
                                                </form>
                                            <%}%>
                                            <%if(user.admin || entitys[cellCount1].write){%>
                                                <form action = "./<%= project.id%>/files/attachment/<%= entitys[cellCount1].id%>" method="get">
                                                    <button class="dropdown-item" type="submit"><i class="fa fa-download"></i> Download</button>
                                                </form>
                                                <form action = "<%= renamePath%>" method="get">
                                                    <button class="dropdown-item" type="submit"><i class="fa fa-pencil"></i> Rename</button>
                                                </form>
                                                <form action="<%= deletePath%>" method="post">
                                                    <button type="submit" class="dropdown-item"><i class="fa fa-minus-square-o"></i>  Delete</button>
                                                </form>
                                                <% if(user.admin){%>
                                                    <div class="dropdown-divider"></div>
                                                    <form action="<%= permissionsPath%>" method="get">
                                                        <button type="submit" class="dropdown-item"><i class="fa fa-user"></i> Permissions</button>
                                                    </form>
                                                <%}%>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>
                                <%cellCount1++%>
                            <%}%>
                        </div>
                        <div style="text-align:center;" class="row">
                            <%for(let l = 0; l < cellsInRow; l++){%>
                                <div class="col">
                                    <%if(entitys[cellCount2].isFolder){%>
                                        <a style = "text-decoration: none; color:#343a40;" href="./<%= project.id%>/folders/folder/<%= entitys[cellCount2].getId()%>">
                                            <i class="fa fa-folder fa-3x"></i>
                                        </a>
                                    <%}else if(entitys[cellCount2].ext){
                                        var ext = entitys[cellCount2].ext;
                                    %>
                                        <a style = "text-decoration: none; color:#343a40;" href="./<%= project.id%>/files/inline/<%= entitys[cellCount2].getId()%>">
                                            <%if(ext === '.pdf'){%>
                                                <i class="fa fa-file-pdf-o fa-3x"></i>
                                            <%}else if(ext  === '.docx'|| ext === '.doc'){%>
                                                <i class="fa fa-file-word-o fa-3x"></i>
                                            <%}else if(ext === '.jpg'||ext ==='.jpeg'||ext === '.png'||ext === '.bmp'||ext==='.gif'){%>
                                                <i class="fa fa-file-image-o fa-3x"></i>
                                            <%}else if(ext === '.ppt' || ext === '.pptx'){%>
                                                <i class="fa fa-file-powerpoint-o fa-3x"></i>
                                            <%}else if(ext === '.xlsx'){%>
                                                <i class="fa fa-file-excel-o fa-3x"></i>
                                            <%}else if(ext ==='.txt'){%>
                                                <i class="fa fa-file-text-o fa-3x"></i>
                                            <%}else if( ext === '.zip'||ext==='.rar'||ext ==='.7z'){%>
                                                <i class="fa fa-file-zip-o fa-3x"></i>
                                            <%}else if(ext === '.java'||ext ==='.js'||ext==='.py'||ext==='.cs'||ext==='.php'||ext==='.html'||ext==='.css'){%>
                                                <i class="fa fa-file-code-o fa-3x"></i>
                                            <%}else{%>
                                                <i class="fa fa-file-file-o fa-3x"></i>
                                            <%}%>
                                        </a>
                                    <%}%>
                                </div>
                                <%cellCount2++%>
                            <%}%>
                        </div>
                        <div style="text-align:center;" class="row">
                            <%for(let m = 0; m < cellsInRow; m++){%>
                                <div class="col">
                                    <a style = "text-decoration: none; color:#343a40;" href="./<%= project.id%>/files/inline/<%= entitys[cellCount3].getId()%>">
                                        <%= entitys[cellCount3].getName()%>
                                    </a>
                                </div>
                                <%cellCount3++%>
                            <%}%>
                        </div>
            <%}%>
</div>
<%- include('../include/foot.ejs')%>