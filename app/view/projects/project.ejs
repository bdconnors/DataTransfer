<%- include('../include/head.ejs',{title:'File System Home',scripts:false})%>
<body>
<%- include('../include/menu.ejs',{system:system}) %>

<% var user = system.getUserInfo()%>
<%- include('../include/projectNav.ejs',{system:system,project:project})%>
<div class="bg-secondary" id = "header"  style="padding:35px 50px;border: 1px solid #343a40;">
    <h4 class="bg-secondary" ><i class="fa fa-archive fa-lg" ></i>  Project <%= project.name%></h4>
</div>
<br>
<div style="display:table; margin-left:auto;margin-right:auto;text-align:center;">
    <div style="display:table; margin-left:auto;margin-right:auto; text-align:center; width:40%">
        <table style="border-collapse:separate; border-spacing:10px 10px; width:100%;">
            <% var entitys = project.getEntitys()%>
            <% var totalCells = entitys.length%>
            <% var fullRows = Math.floor(entitys.length/3)%>
            <% var partialRowCount = entitys.length % 3 %>
            <% var rows = fullRows+1%>
            <% var cellCount = 0%>

            <%for(var i = 0; i < rows; i++){
                console.log('row count: '+i);
            %>
            <tr>
                <%var cellsInRow = 3%>
                <%if(i === fullRows){
                    cellsInRow = partialRowCount;
                }%>
                <%for(var j = 0; j < cellsInRow; j++){
                    console.log('cellCount: '+cellCount);
                %>
                <td style="padding: 0 10px 0 10px;">

                        <div class="dropdown">
                            <button style = "background-color:transparent; font-size:16px" class="btn btn-lg dropdown-toggle" type="button" id="projSettings" data-toggle="dropdown" aria-haspopup ="true" aria-expanded="false">
                                <i class="fa fa-cog"></i> Options
                            </button>
                            <div class="dropdown-menu" aria-labelledby="projSettings">
                                    <%  var deletePath;
                                        var renamePath;
                                        var permissionsPath;
                                    %>
                                    <%if(entitys[cellCount].isFolder && entitys[cellCount].read){
                                        deletePath = "./"+project.id+"/folders/delete?id="+entitys[cellCount].getId();
                                        renamePath = "./"+project.id+"/folders/folder/"+entitys[cellCount].getId()+"/rename";
                                        permissionsPath = "./"+project.id+"/folders/folder/"+entitys[cellCount].getId()+"/permissions";
                                    %>
                                        <form action = ./<%= project.id%>/folders/folder/<%= entitys[cellCount].getId()%> method="get">
                                            <button class="dropdown-item" type="submit"><i class="fa fa-folder-open"></i> Open</button>
                                        </form>
                                    <%}else if(!entitys[cellCount].isFolder && entitys[cellCount].read){
                                        deletePath = "./"+project.id+"/files/delete?id="+entitys[cellCount].getId();
                                        renamePath = "./"+project.id+"/files/"+entitys[cellCount].getId()+"/rename";
                                        permissionsPath = "./"+project.id+"/files/"+entitys[cellCount].getId()+"/permissions";
                                    %>
                                        <form action = "./<%= project.id%>/files/inline/<%= entitys[cellCount].id%>" method="get">
                                            <button class="dropdown-item" type="submit"><i class="fa fa-eye"></i> View</button>
                                        </form>
                                    <%}%>
                                <%if(user.admin || entitys[cellCount].write){%>
                                    <form action = "./<%= project.id%>/files/attachment/<%= entitys[cellCount].id%>" method="get">
                                        <button class="dropdown-item" type="submit"><i class="fa fa-download"></i> Download</button>
                                    </form>
                                    <form action = "<%= renamePath%>" method="get">
                                        <button class="dropdown-item" type="submit"><i class="fa fa-pencil"></i> Rename</button>
                                    </form>
                                    <form action="<%= deletePath%>" method="post">
                                        <button type="submit" class="dropdown-item"><i class="fa fa-minus-square-o"></i>  Delete</button>
                                    </form>
                                    <% if(user.admin){%>
                                        <div class="dropdown-divider"></div>
                                        <form action="<%= permissionsPath%>" method="get">
                                            <button type="submit" class="dropdown-item"><i class="fa fa-user"></i> Permissions</button>
                                        </form>
                                    <%}%>
                                <%}%>
                            </div>
                        </div>
                        <%if(entitys[cellCount].isFolder){%>

                            <a style = "text-decoration: none; color:#343a40;" href="./<%= project.id%>/folders/folder/<%= entitys[cellCount].getId()%>">
                                <i class="fa fa-folder fa-3x"></i>
                                <br>
                                <span style="font-size:12px;"><%= entitys[cellCount].getName()%></span>
                            </a>
                        <%}else if(entitys[cellCount].ext){var ext = entitys[cellCount].ext;%>
                            <a style = "text-decoration: none; color:#343a40;" href="./<%= project.id%>/files/inline/<%= entitys[cellCount].getId()%>">
                                <%if(ext === '.pdf'){%>
                                    <i class="fa fa-file-pdf-o fa-3x"></i>
                                <%}else if(ext  === '.docx'|| ext === '.doc'){%>
                                    <i class="fa fa-file-word-o fa-3x"></i>
                                <%}else if(ext === '.jpg'||ext ==='.jpeg'||ext === '.png'||ext === '.bmp'||ext==='.gif'){%>
                                    <i class="fa fa-file-image-o fa-3x"></i>
                                <%}else if(ext === '.ppt' || ext === '.pptx'){%>
                                    <i class="fa fa-file-powerpoint-o fa-3x"></i>
                                <%}else if(ext === '.xlsx'){%>
                                    <i class="fa fa-file-excel-o fa-3x"></i>
                                <%}else if(ext ==='.txt'){%>
                                    <i class="fa fa-file-text-o fa-3x"></i>
                                <%}else if( ext === '.zip'||ext==='.rar'||ext ==='.7z'){%>
                                    <i class="fa fa-file-zip-o fa-3x"></i>
                                <%}else if(ext === '.java'||ext ==='.js'||ext==='.py'||ext==='.cs'||ext==='.php'||ext==='.html'||ext==='.css'){%>
                                    <i class="fa fa-file-code-o fa-3x"></i>
                                <%}else{%>
                                    <i class="fa fa-file-file-o fa-3x"></i>
                                <%}%>
                                <br>
                                    <span style="font-size:12px;"><%= entitys[cellCount].getName()%></span>
                            </a>
                        <%}%>
                        <br>


                    <%cellCount++%>
                    <%}%>
            </tr>
            <%}%>
        </table>
    </div>
</div>
<%- include('../include/foot.ejs')%>