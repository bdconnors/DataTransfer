<% var users = system.getAllUsers()%>
<% var user = system.getUserInfo()%>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	<a class="navbar-brand" href="/dashboard"><i class="fa fa-floppy-o"></i></a>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2" id="navbarNavDropdown">
		<ul class="navbar-nav">
			<li class="nav-item active">
				<a class="nav-link" href="/dashboard"><i class="fa fa-home"></i> Home <span class="sr-only">(current)</span></a>
			</li>
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="#"  id="projectsMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fa fa-archive"></i> Projects
				</a>
				<div class="dropdown-menu" aria-labelledby="projectsMenu">
					<%var projects = user.getProjects()%>
					<%if(projects.length === 0){%>
						<a class="dropdown-item" style="font-style:italic;">No Projects</a>
					<%}%>
					<%for(var i = 0; i < projects.length; i++){%>
						<a class="dropdown-item" href="/projects/project/<%= projects[i].getId()%>"><i class="fa fa-archive"></i> <%= projects[i].getName() %></a>
					<%}%>
					<%if(user.admin){%>
						<div class="dropdown-divider"></div>
						<a class ="dropdown-item" href="/projects/newproject"><i class="fa fa-plus-square"></i> New Project</a>
					<%}%>
				</div>
			</li>
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="#" id="usersMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fa fa-user"></i> Users
				</a>
				<div class="dropdown-menu" aria-labelledby="usersMenu">

					<%for(var i=0; i < users.length; i++) {%>
						<%if(!users[i].authCode){%>
							<a href ="/users/user/<%= users[i].id%>" class ="dropdown-item" ><i class="fa fa-user-circle-o"></i> <%= users[i].getFullName() %></a>
						<%}%>
					<%}%>

					<%if(user.getAdmin() === true){%>
						<div class="dropdown-divider"></div>
						<a class ="dropdown-item" href="/users/invite"><i class="fa fa-envelope"></i> Invite User</a>
						<a class ="dropdown-item" href="/users/delete"><i class="fa fa-minus"></i> Delete User</a>
					<%}%>
				</div>
			</li>
		</ul>
	</div>
	<div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
		<ul class="navbar-nav ml-auto">
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="#" id="signInMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fa fa-user-circle-o"></i> <%= user.getFirstName()%>
				</a>
				<div class="dropdown-menu" aria-labelledby="signInMenu">
					<a class ="dropdown-item" href="/logout"><i class="fa fa-power-off"></i> Log Out</a>
				</div>
			</li>
		</ul>
	</div>
</nav>
