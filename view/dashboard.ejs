<%- include('./include/head.ejs',{title:'Novitious Dashboard'})%>
<%if(user.admin){%>
    <%- include('./include/adminNav.ejs') %>
<%}else{%>
    <%- include('./include/menu.ejs') %>
    <% var projects = user.projectPermissions %>
<%}%>
<body>
<div id="pageHeader" style="padding:35px 50px; width:100%;">
    <h1> <i class="fa fa-user-circle-o " ></i> Welcome <%= user.firstname %> <%if(user.admin){%>(Admin)<%}%></h1>
</div>
<div style="padding-top:50px;" class="center">
    <div style="text-align:center; padding-top:20px;padding-bottom:20px " class="row">
    <%for(var i = 0; i < projects.length; i++){
        var id;
        var name;
    %>
            <%if(user.admin){
                id = projects[i].id;
                name = projects[i].name;
            %>
            <%}else{
                id = projects[i].projectId;
                name = projects[i].projectName;
            }%>
            <a style = "text-decoration: none; color:#343a40;" href="/projects/project/<%= id %>">
                <div style="text-align:center;">
                    <i class="fa fa-archive fa-3x"></i>
                    <br>
                    <b>Project <%= name%></b>
                </div>
            </a>

        </div>
    <%}%>
    </div>
</div>
<%- include('./include/foot.ejs')%>
