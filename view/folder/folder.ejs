<%- include header.ejs%>
<body>
<%- include('../include/menu.ejs'); %>
<div>
    <%if(user.admin === true||folder.admin.id === user.id){%>
        <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand"><%= folder.name%></a>
                </div>
                <form class="navbar-form navbar-right">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" name="search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </nav>
        <div class="btn-group">
            <button type="button" class="btn btn-info" onclick = "window.location.href='./<%= folder.name%>/upload/file'">Upload File</button>
            <form action="/delete/folder/<%=folder.name%>" method="post">
                <button type="submit" class="btn btn-info">Delete Folder</button>
            </form>
            <button type="button" class="btn btn-info">Edit Folder</button>
        </div>
        <% for(var i = 0; i< folder.files.length; i++){%>
            <figure>
                <a href="./<%= folder.name%>/<%= folder.files[i].name%>">
                    <img src="../images/file.png"><figcaption><%= folder.files[i].name %></figcaption>
                </a>
                <% if(user.admin === true || folder.admin === user.id){%>
                    <div class="btn-group">
                        <button type="button" class="btn btn-info">Edit File</button>
                        <form action="./<%= folder.name%>/delete/file/<%= folder.files[i].name%>" method="post">
                            <button type="submit" class="btn btn-info">Delete File</button>
                        </form>
                    </div>
                <%}%>
            </figure>
        <%}%>
    <%}else{%>

    <%}%>
</div>
<%- include footer.ejs%>