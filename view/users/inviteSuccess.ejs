<%- include('../include/head.ejs',{title:'Invite User',scripts:false})%>
<body>
<%- include('../include/menu.ejs',{system:system}) %>
<div class="content">
    <div class= "bg-dark" id = "header"  style="padding:35px 50px;">
        <h4 class= "bg-dark" ><i class="fa fa-user-plus fa-lg" ></i>  Invite User</h4>
    </div>
    <div class="body" style="padding:40px 50px;">
        <form action="/dashboard" method="get">
            <div style="display:table; margin-left:auto; margin-right:auto;" class="form-group">
                <h3>An Invitation E-mail has been sent to: </h3>
                <br>
                <p><b>Name:</b> <%= name%></p>
                <p><b>E-mail:</b> <%= email%></p>
                <p><b>Account Type:</b> <%= account%></p>
                <button type="submit" class="btn btn-dark btn-block" ><span class="glyphicon glyphicon-off"></span> Ok</button>
            </div>
        </form>
    </div>
</div>

<%- include('../include/foot.ejs')%>