						<div style="display:table;margin-left:auto;margin-right:auto;" class="row">
							<button type="button" id="" onclick="showAddUsers()" class="btn btn-outline-dark button"><i class="fa fa-user-plus"></i> Add User</button>
							<button type="button" id="curUserButton"  class="btn btn-outline-dark button"><i class="fa fa-power-off"></i> Submit</button>
						</div>
						<div style="display:table;margin-left:auto;margin-right:auto;" class="row">
							<label for="name"><i class="fa fa-pencil"></i> <b>Project Name:</b></label>
							<input type="text" class="form-control" name="name" id="name" placeholder="Project Name">
						</div>
						<br>
						</div>
					</div>
				</div>
