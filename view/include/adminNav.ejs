<script src="/scripts/adminNav.js"></script>
<div id="createProj" style="display:none;width:80%;" class="container">
			<form id="fileForm" role="form" method="post">
				<div class="row">
					<div style="display:table;margin-left:auto;margin-right:auto;" class="col-md-4">
						<div id="currentUsers" class="card">
							<h5 class="card-header"><i class="fa fa-archive"></i> Enter Project Name</h5>
							<div class="card-body">
								<label for="name"><i class="fa fa-pencil"></i> <b>Project Name:</b></label>
						<input type="text" class="form-control" name="name" id="name" placeholder="Project Name">
							</div>
						</div>
					</div>
					<div  id="currentUsers" style="display:table;margin-left:auto;margin-right:auto;" class="col-md-4">
					<div class="card">
					<h5 class="card-header"><i class="fa fa-user-plus"></i> Add Current Users</h5>
					<div class="card-body">
						<div class="row">
							<div style="display:table;margin-left:auto;margin-right:auto;" class="col-md-4">
								<a id="curUserButton" onclick="showUserSelect()" class="btn btn-dark"><span style="color:#28a745"><i class="fa fa-plus"></i></span> <span style="color:#f8f9fa"><b>Add User</b></span></a>
							</div>
						</div>
						<br>
						<div class="row">
							<div style="display:table;margin-left:auto;margin-right:auto;" class="col-md-4">
						<div style="display:none;" id="userSelectDiv" >
							<%var displayed = 0;%>
							<label for="userSelect"><i class="fa fa-user"></i> <b>Select a User:</b></label>
							<select onchange="selectUser(this)" id="userSelect">
								<%for(var i = 0; i < users.length; i++){%>
									<%if(!users[i].admin && users[i].id !== user.id){%>
										<option value="<%= users[i].id%>"> <%= users[i].getFullName()%></option>
										<%displayed++%>
									<%}%>
								<%}%>
								<%if(displayed === 0){%>
									<option>No Users Found</option>
								<%}%>
							</select>
							</div>
							</div>
						</div>
						</div>
					</div>
				</div>
					<div id="inviteUser" style="display:table;margin-left:auto;margin-right:auto;" class="col-md-4">
						<div class="card">
							<h5 class="card-header"><i class="fa fa-envelope"></i> Add New User</h5>
							<div class="card-body">
								<label for="email"><i class="fa fa-envelope"></i> <b>E-mail:</b></label>
								<input type="text" name="email" id="email" class="form-control" oninput="checkEmailInput(this)" placeholder="E-mail">
							</div>
						</div>
					</div>
				</div>
				<br>
				<br>
				<div id="currentUsersAdded" style="display:none"></div>
				<div id="newUsersAdded" style="display:none"></div>
				<div class="row">
					<div style="display:table;margin-left:auto;margin-right:auto;" class="col-md-4">
						<button type="submit" class="btn btn-dark btn-block" ><i class="fa fa-power-off"></i> <b>Create</b></button>
					</div>
				</div>
			</form>
	</div>
<br>
<hr>