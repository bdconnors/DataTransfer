<%- include('../include/menu_scripts.ejs')%>
<script>
    function setData(){

        let input = document.getElementById('input');
        console.log(input);

        let reader = new FileReader();
        reader.readAsDataURL(input.files[0]);
        let url = window.location.href;
        let ext = url.substr(1 + url.lastIndexOf("/"));
        document.getElementById('fileForm').action = '/folder/'+ext+'/upload/file';
        reader.onload = function(){
            let dataUrl = reader.result;
            $('data').val() = dataUrl.split(',')[1];
        };
    }
</script>