
    <form role="form" action="/add/folder" onsubmit="return validate()" method="post">
        <p id="nameError" style="display:none; font-size:12px;"></p>
        <div class="form-group">
            <label for="name"><span class="glyphicon glyphicon-user"></span> Folder Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Folder Name">
        </div>
        <div class="form-group">
            <label for="retype"><span class="glyphicon glyphicon-user"></span> User Permissions</label>
            <br>
            <% for(var i=0; i < users.length; i++) {%>
                <% if(users[i].admin !== true && users[i].id !== user.id){%>
                    <input type="checkbox" name="users" id="users" value="<%= users[i].id%>"><%= users[i].firstname+' '+users[i].lastname %><br>
                <%}%>
            <% } %>
        </div>
        <button type="submit" class="btn btn-info btn-block"><span class="glyphicon glyphicon-off"></span> Add Folder</button>
    </form>
