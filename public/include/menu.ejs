<div id='cssmenu'>
    <ul>
        <li>
            <a href='/dashboard'>Home</a>
        </li>
        <li>
            <a href='#'>Folders</a>
            <ul>
                <li><a id="addFolderButton" >Add New Folder</a></li>
                <% if(user.admin === true){%>
                    <% for(var i = 0; i < folders.length; i++) {%>
                        <li><a href="/folder/<%= folders[i].name%>"><%= folders[i].name %></a></li>

                    <% } %>
                <%}else{%>
                    <% for(var  i = 0; i < folders.length; i++){%>

                        <%if(folders[i].admin.id === user.id){%>
                            <li><a href="/folder/<%= folders[i].name%>"><%= folders[i].name %></a></li>
                        <%}else{%>
                           <%for(var j = 0; j < folders[i].users.length; j++){%>
                                <%if(folders[i].users[j].id === user.id){%>
                                    <li><a href="/folder/<%= folders[i].name%>"><%= folders[i].name %></a></li>
                                <%}%>
                            <%}%>
                        <%}%>
                    <%}%>
                <%}%>
            </ul>
        </li>
            <%if(user.admin === true){%>
                <li>
                    <a href='#'>Users</a>
                    <ul>
                        <li>
                            <a id="addUserButton">Add New User</a>
                        </li>
                        <% for(var i=0; i < users.length; i++) {%>
                            <li><a ><%= users[i].firstname +' '+users[i].lastname %></a></li>
                        <%}%>
                    </ul>
            <%}%>
        <li>
            <a href="/logout">Log Out</a>
        </li>
    </ul>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding:35px 50px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="modalTitle"><span class="glyphicon glyphicon-lock"></span></h4>
            </div>
            <div id="content" class="modal-body" style="padding:40px 50px;">
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $("#addUserButton").click(function(){
            $("#content").empty();
            $(`<%- include add_user.ejs%>`).appendTo($("#content"));
            $(document.createTextNode("Add User")).appendTo($("#modalTitle"));
            $("#myModal").modal();
        });
        $("#addFolderButton").click(function(){
            $("#content").empty();
            $(`<%- include add_folder.ejs%>`).appendTo($("#content"));
            $(document.createTextNode("Add User")).appendTo($("#modalTitle"));
            $("#myModal").modal();
        });
        $("#input").change(function(){
            let input = document.getElementById('input');
            let reader = new FileReader();
            reader.onload = function(){
                let data = reader.readAsDataURL(input.files[0]);
                document.getElementById('data').value = data;
            };
        });
        $("#uploadFileButton").click(function(){
            $("#content").empty();
            $(`<%- include upload_file.ejs%>`).appendTo($("#content"));
            $(document.createTextNode("Upload File")).appendTo($("#modalTitle"));
            $("#myModal").modal();
        });


    });
</script>