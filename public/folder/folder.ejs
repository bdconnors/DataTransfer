<%- include header.ejs%>
<body>
<%- include('../include/menu.ejs'); %>
<div>
    <%if(user.admin === true||folder.admin.id === user.id){%>
        <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand"><%= folder.name%></a>
                </div>
                <form class="navbar-form navbar-right">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" name="search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </nav>
        <div class="btn-group">

            <button id="uploadFileButton" type="button" class="btn btn-info" href="#">Upload File</button>
            <button type="button" class="btn btn-info" href="#">Delete Folder</button>
            <button type="button" class="btn btn-info" href="#">Edit Folder</button>
        </div>
        <% for(var i = 0; i< folder.files.length; i++){%>
            <figure>
                <a href="./<%= folder.name%>/<%= folder.files[i].name%>">
                    <img src="../images/file.png"><figcaption><%= folder.files[i].name %></figcaption>
                </a>
            </figure>
        <%}%>
    <%}else{%>

    <%}%>
</div>
<%- include footer.ejs%>